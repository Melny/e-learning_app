@inherits LayoutComponentBase

<MudThemeProvider Theme="_civopTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Primary">
        <MudIconButton Class="pr-8" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudImage Src="images/civop_logo_white.svg" Width="140" Alt="Mony the dog" Class="pr-4"/>
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudPaper Class="pb-1 pt-1 pl-2 pr-2 mud-theme-secondary">Klientská sekce</MudPaper>
        </MudHidden>
        <MudSpacer/>
        
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudText Class="pr-8">Scania Czech Republic s.r.o.</MudText>
        </MudHidden>
        
        <MudTooltip Text="Změna hesla" Color="Color.Primary" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Material.Filled.Lock" Color="Color.Inherit" Edge="Edge.Start" Class="mr-2" />
        </MudTooltip>
        <MudTooltip Text="Odhlásit" Color="Color.Primary" Placement="Placement.Bottom">
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Edge="Edge.Start" />
        </MudTooltip>

    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="25" Class="pt-8">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="my-1 pa-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    
    MudTheme _civopTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#0a2878",
            Secondary = "#f02d00"
        },
    };
};

@code{
    bool disabled = false;
}